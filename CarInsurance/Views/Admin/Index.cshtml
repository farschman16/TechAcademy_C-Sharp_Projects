@using CarInsurance.ViewModels
@model List<InsureeVm>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Licensees</h5>
        </div>
        <div class="card-body">
            @foreach (var insureeVm in Model)
            {
                using (Html.BeginForm("Details", "Admin", FormMethod.Post))
                {

                    <div class="row mb-3">
                        <div class="col-2">
                            @insureeVm.FirstName
                        </div>
                        <div class="col">
                            @insureeVm.LastName
                        </div>
                        <div class="col-4">
                            @insureeVm.EmailAddress
                        </div>
                        <div class="col-4">
                            @insureeVm.Quote
                        </div>
                    </div>
                }

            }

        </div>
    </div>
</div>
